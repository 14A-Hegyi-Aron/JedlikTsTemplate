{
    "compilerOptions": {
        "target": "es5",
        "strict": true,
        "pretty": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "lib": ["es2015"],
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "watch": false,
        "outDir": "dist",
        "types": ["node", "jest"],
        "rootDir": "./src",
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": ["node_modules", "src/**/*.spec.ts"],
    "include": ["src/**/*.ts"]
}
