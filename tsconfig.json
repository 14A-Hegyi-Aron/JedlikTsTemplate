{
    "compilerOptions": {
        "target": "ESNext",
        "strict": true,
        "pretty": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "sourceMap": true,
        "watch": true,
        "outDir": "./js",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "ts/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "**/node_modules/*"
    ]
}